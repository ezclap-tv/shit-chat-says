{
    "collector": {
        "channels": [
            "<your_channel_name>",
            {
                "name": "<channel_with_different_buffer_size>",
                "buffer": 2048
            }
        ],
        "output_directory": "logs",
        "credentials": {
            "login": "<bot username>",
            "token": "generate at https://twitchapps.com/tmi/"
        }
    },
    "train": {
        "channels": {
            "username": [
                "additional",
                "channels",
