    "chat": {
        "credentials": {
            "login": "<bot username>",
            "token": "generate at https://twitchapps.com/tmi/"
        },
        "channels": [
            "your_channel_name",
            "a_different_channel_name"
        ],
        "reply_probability": 1.00,
        "reply_timeout": "60s",
        "reply_after_messages": 20,
